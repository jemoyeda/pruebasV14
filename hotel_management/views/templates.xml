<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="hotel_page" name="Hotel Management">
        <t t-call="website.layout">

            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <center>
                        <h3>User details</h3>
                    </center>
                    <br/>
                    <table class="table-striped table">
                        <thead style="font-size:23px;">
                            <tr>
                                <h6>
                                    <b>
                                        <th>User</th>
                                        <th>Phone</th>
                                    </b>
                                </h6>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="customer" t-as="user">
                                <tr>
                                    <td>
                                        <span t-esc="user.name"></span>
                                    </td>
                                    <td>
                                        <span t-esc="user.phone"></span>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
</odoo>