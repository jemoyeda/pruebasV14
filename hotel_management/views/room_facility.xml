<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Tree View  -->
    <record id="view_hotel_room_facility_tree" model="ir.ui.view">
        <field name="name">hotel.room.facility.tree</field>
        <field name="model">hotel.room.facility</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--    Form views-->
    <record id="view_hotel_room_facility_form" model="ir.ui.view">
        <field name="name">hotel.room.facility.form</field>
        <field name="model">hotel.room.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
